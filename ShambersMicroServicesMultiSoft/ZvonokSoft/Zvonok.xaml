<Window x:Class="ShambersMicroServicesMultiSoft.ZvonokSoft.Zvonok"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShambersMicroServicesMultiSoft.ZvonokSoft"
        mc:Ignorable="d"
        Title="Zvonok" Height="530" Width="460">
    <Grid Background="Wheat">
        <Grid Background="Wheat" Width="450" Height="500" Margin="5"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="4*"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5">
                    <TextBlock Text="Статус работы программы" TextAlignment="Center"></TextBlock>
                    <TextBlock Margin="0, 5, 0, 0" TextAlignment="Center" Name="TextOption" Text="Null"></TextBlock>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Run Text="Время: "></Run>
                        <Run Text="Null"></Run>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Run Text="Пара/Урок: "></Run>
                        <Run Text="Null"></Run>
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Начало занятий" Margin="5" TextAlignment="Center"></TextBlock>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="1." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeStart1" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="2." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeStart2" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="3." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeStart3" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="4." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeStart4" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="5." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeStart5" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="6." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeStart6" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="7." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeStart7" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="8." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeStart8" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="9." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeStart9" Text="Null"></TextBox>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="Конец занятий" Margin="5" TextAlignment="Center"></TextBlock>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="1." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeEnd1" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="2." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeEnd2" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="3." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeEnd3" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="4." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeEnd4" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="5." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeEnd5" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="6." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeEnd6" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="7." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeEnd7" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="8." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeEnd8" Text="Null"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="9." TextAlignment="Center" Margin="5"></TextBlock>
                                <TextBox Margin="5" Width="50" Name="TimeEnd9" Text="Null"></TextBox>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5">
                <StackPanel Margin="10">
                    <TextBlock Text="Основные команды" TextAlignment="Center"></TextBlock>
                    <Button Content="Запуск" Margin="5" Width="170" Height="30" Background="Aquamarine" Name="BtnStart" Click="BtnStart_Click"></Button>
                    <Button Content="Тревога" Width="170" Height="30" Margin="5" Background="Orange" Name="BtnAttention" Click="BtnAttention_Click"></Button>
                    <Button Margin="5" Width="170" Height="40" Background="Orange" Name="BtnStop" Click="BtnStop_Click">
                        <TextBlock TextAlignment="Center">Остановить работу<LineBreak/> приложения</TextBlock>
                    </Button>
                </StackPanel>
                <StackPanel Margin="10">
                    <TextBlock Text="Отладочные команды" TextAlignment="Center"></TextBlock>
                    <Button Content="Проверить работу звонка" Margin="5" Width="170" Height="30" Background="Aquamarine" Name="BtnSound" Click="BtnSound_Click"></Button>
                    <Button Content="Проверить работу тревоги" Margin="5" Width="170" Height="30" Background="Aquamarine" Name="BtnAttentionSound" Click="BtnAttentionSound_Click"></Button>
                    <Button Width="170" Height="60" Margin="5" Background="Orange" Name="BtnStopSoundAll" Click="BtnStopSoundAll_Click">
                        <TextBlock TextAlignment="Center">Остановить<LineBreak/>воспроизведение<LineBreak/> всех звуков</TextBlock>
                    </Button>
                    <Button Grid.Row="1" Grid.ColumnSpan="2" Width="170" Height="30" Margin="5" Background="Aquamarine" Content="Сохранить введённое время" Name="BtnSaveTime" Click="BtnSaveTime_Click"></Button>
                    <Button Width="170" Height="40" Margin="5" Background="Orange" Name="BtnTimeDefault" Click="BtnTimeDefault_Click">
                        <TextBlock TextAlignment="Center">Установить время<LineBreak/>по умолчанию</TextBlock>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
